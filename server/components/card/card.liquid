<div class="card">
  <h2 class="h2">{{ item.name }}</h2>

  {%- if item.covers and item.covers[0] -%}
    <picture>
      <source srcset="https://fdnd-agency.directus.app/assets/{{ item.covers[0].directus_files_id }}?fit=cover&format=avif" type="image/avif" />
      <source srcset="https://fdnd-agency.directus.app/assets/{{ item.covers[0].directus_files_id }}?fit=cover&format=webp" type="image/webp" />
      <img class="card__image"
           src="https://fdnd-agency.directus.app/assets/{{ item.covers[0].directus_files_id }}?fit=cover&format=png"
           loading="lazy"
           alt="{{ item.name }}"
           width="400"
           height="300" />
    </picture>
  {%- else -%}
    <p><em>Geen afbeelding beschikbaar</em></p>
  {%- endif -%}
</div>
